{
  "name": "erp",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "elysia": "^1.4.16",
      "@orpc/server": "^1.11.3",
      "@orpc/openapi": "^1.11.3",
      "@orpc/client": "^1.11.3",
      "@orpc/zod": "^1.11.3",
      "better-auth": "^1.4.2",
      "dotenv": "^17.2.3",
      "zod": "^4.1.13"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @erp/db db:push",
    "db:studio": "turbo -F @erp/db db:studio",
    "db:generate": "turbo -F @erp/db db:generate",
    "db:migrate": "turbo -F @erp/db db:migrate"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "turbo": "^2.6.1",
    "@biomejs/biome": "2.3.7",
    "ultracite": "6.3.6",
    "@types/bun": "^1.3.3"
  },
  "packageManager": "bun@1.3.3"
}
